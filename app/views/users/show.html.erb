<% provide(:title, "User Profile") %>

<div class="users-view">
  <h1>User Profile</h1>

  <h3>Name</h3>
  <p><%= @user.name %></p>

  <h3>Orders</h3>
  <table class="table">
    <tr>
      <th>#</th>
      <th>Item</th>
      <th>Category</th>
    </tr>
    <% @purchased_items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.categories.map { |category| category.name }.join(", ") %></td>
      </tr>
    <% end %>
  </table>

  <h3>Recommendations</h3>
  <table class="table">
    <tr>
      <th>#</th>
      <th>Item</th>
      <th>Category</th>
    </tr>
    <% @recommended_items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.categories.map { |category| category.name }.join(", ") %></td>
      </tr>
    <% end %>
  </table>
  
</div>
